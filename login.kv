#:include connected.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,20,10,0]
        spacing: 10

        Label:
            text: "Welcome"
            font_size: 22
        Label:
            text: "We didn't find You  in our database - please register"
            font_size: 15

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Name'
                font_size: 17
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 15
        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Phonenumber'
                font_size: 17
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: phonenumber
                multiline:False
                font_size: 15

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Street address'
                font_size: 17
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: address
                multiline:False
                font_size: 15

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'City'
                font_size: 17
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: city
                multiline:False
                font_size: 15

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 17
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 15

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Repeat password'
                halign: 'left'
                font_size: 17
                text_size: root.width-20, 20

            TextInput:
                id: repeatpassword
                multiline:False
                password:True
                font_size: 15

        Button:
            text: 'Register'
            font_size: 24

            on_press: root.do_login(login.text, password.text)
